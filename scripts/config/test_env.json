{
  "test_environments": [
    {
      "name": "ubuntu-test-server-1",
      "ip": "192.168.1.100",
      "port": 22,
      "user": "ubuntu",
      "ssh_key_path": "~/.ssh/id_rsa",
      "remote_deploy_path": "/home/ubuntu/aurelia_agent",
      "role": "primary"
    },
    {
      "name": "ubuntu-test-server-2",
      "ip": "192.168.1.101",
      "port": 22,
      "user": "ubuntu",
      "ssh_key_path": "~/.ssh/id_rsa",
      "remote_deploy_path": "/home/ubuntu/aurelia_agent",
      "role": "replica"
    }
